{
  "manifest_version": 2,

  "name": "Find Author",
  "description": "This extension allows the user to find the Author of the webpage.",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["content_script.js"]
    }
  ],


  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title" :"Find Author"

  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}